<div class="page-header">
  <h1><%= @prescription.clinic %></h1>

  <ul class="actions">
    <li><%= link_to "Edit",
      edit_prescription_path(@prescription), class: "btn btn-primary" %></li>
    <li><%= link_to "Delete Prescription",
      prescription_path(@prescription),
      method: :delete,
      data: { confirm: "Are you sure you want to delete this prescription?" },
      class: "btn btn-danger" %></li>
  </ul>
</div>

<table id="attributes">
  <tr>
    <th>Clinic:</th>
    <td><%= @prescription.clinic %></td>
  </tr>
  <tr>
    <th>Created by:</th>
    <td><%= @prescription.user.email %></td>
  </tr>
  <tr>
    <th>Created:</th>
    <td><%= time_ago_in_words(@prescription.created_at) %> ago</td>
  </tr>
</table>

<div class="page-header">
  <h2>Medication</h2>

  <ul class="actions">
    <li><%= link_to "New Drug",
      new_prescription_drug_path(@prescription), class: "btn btn-primary" %></li>
  </ul>
</div>

<table id="medication">
  <tr>
    <th>
      <th>Brand</th>
    </th>
    <th>
      <th>Name</th>
    </th>
    <th>
      <th>Dose</th>
    </th>
  </tr>
</table>

<% if @drugs %>
  <% @drugs.each do |drug| %>
    <tr>
      <td><%= drug.brand %></td>
      <td><%= drug.name %></td>
      <td><%= drug.dose %></td>
    </tr>
  <% end %>
<% end %>
