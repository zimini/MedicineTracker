<div class="row row-striped" id="prescription-<%= drug.id %>">
  <div class="col-md-3"><%= drug.brand %></div>
  <div class="col-md-3"><%= drug.name %></div>
  <div class="col-md-3"><%= drug.dose %></div>
  <div class="col-md-3">
    <%= link_to 'Remove from prescription',
        remove_drug_prescription_path(@prescription, drug),
        remote: true,
        method: :delete,
        class: 'btn btn-danger' %>
  </div>
</div>
