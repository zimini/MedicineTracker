<div class="page-header">
  <h1><%= @diary.title %></h1>

  <ul class="actions">
    <li><%= link_to "Edit Diary",
      edit_diary_path(@diary), class: "btn btn-primary" %></li>
    <li><%= link_to "Delete Diary",
      diary_path(@diary),
      method: :delete,
      data: { confirm: "Are you sure you want to delete this diary?" },
      class: "btn btn-danger" %></li>
  </ul>
</div>

<table id="prescription-table" class="table">
  <thead>
   <tr>
      <th>Description:</th>
      <th>Prescription:</th>
      <th>Created by:</th>
      <th>Created:</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td><%= @diary.description %></td>
      <td><%= @prescription.try(:clinic) %></td>
      <td><%= @diary.user.email %></td>
      <td><%= time_ago_in_words(@diary.created_at) %> ago</td>
    </tr>
  </tbody>
</table>
